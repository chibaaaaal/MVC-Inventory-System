<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Inventory_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_Inventory_System.styles.css" asp-append-version="true" />
    <style>
        .sidebar {
            min-width: 200px;
            max-width: 200px;
            height: 100vh;
            background-color: #f8f9fa;
            padding-top: 1rem;
        }

            .sidebar a {
                display: block;
                padding: 10px 15px;
                color: #333;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #e9ecef;
                    color: #000;
                }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h5 class="text-center">Inventory</h5>
            
            <a asp-area="" asp-controller="Product" asp-action="ProductList">Products</a>
            <a asp-area="" asp-controller="Product" asp-action="AddProduct">Add Product</a>

        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-3">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>